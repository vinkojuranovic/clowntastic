<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchParentVertical"
    tools:context="com.ferit.clowntastic.MainActivity">

    <TextView
        android:id="@+id/tv_instruction"
        android:layout_width="wrap_content"
        android:textSize="@dimen/mediumTextSize12"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/bt_seeOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/check_status_of_orders" />

    <ListView
        android:id="@+id/lv_mainListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
