<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MatchWidth">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MatchHeight">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="WrapContentVertical" parent="WrapContent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchParentVertical" parent="MatchParent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchWidthVertical" parent="MatchWidth">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchHeightVertical" parent="MatchHeight">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchParentVerticalCenter" parent="MatchParentVertical">
        <item name="android:gravity">center</item>
    </style>

    <!-- Text styles -->
    <style name="LogoTextStyle" parent="MatchWidth">
        <item name="android:textSize">@dimen/bigTextSize11</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CandCStyle" parent="LogoTextStyle">
        <item name="android:textSize">@dimen/mediumTextSize12</item>
    </style>

    <!-- Button styles -->
    <style name="ButtonStyleSelection" parent="MatchWidth">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">@dimen/mediumPadding2</item>
    </style>

</resources>
