<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <View
        android:id="@+id/vv_orderStatusColor"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_orderDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="asasasas" />

        <TextView
            android:id="@+id/tv_orderCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_orderCustomerEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="asasasas@mail.com" />

    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:background="@color/red"
        android:gravity="center"
        android:padding="@dimen/smallPadding1"
        android:text="@string/see_more"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/mediumTextSize11" />

</LinearLayout>